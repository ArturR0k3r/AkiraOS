config FS_FATFS_VOLUME_COUNT
    int "Number of FAT volumes"
    default 1
    help
      Maximum number of FAT volumes supported.

config MAX_CONTAINERS
    int "Maximum number of OCRE containers"
    default 4
    range 1 16
    help
      Maximum number of containers that can be managed by OCRE.

config OCRE_WAMR_HEAP_BUFFER_SIZE
    int "WAMR heap buffer size"
    default 262144
    help
      Size of the heap buffer for WAMR runtime.
      Must be large enough to hold WASM linear memory.
      Default 256KB, OCRE recommends 512KB for production.

config OCRE_WAMR_HEAP_BUFFER_IN_PSRAM
    bool "Place WAMR heap buffer in PSRAM when available"
    depends on MEMC
    default n
    help
      When set, the global WAMR heap buffer (configured via
      CONFIG_OCRE_WAMR_HEAP_BUFFER_SIZE) will be placed into the
      external PSRAM section (if supported by the board and MEMC
      driver). This frees internal DRAM for other runtime usage.

config OCRE_LOG_LEVEL
    int "OCRE log level"
    default 3
    range 0 4
    help
      Set the log level for OCRE modules.
      0=OFF, 1=ERR, 2=WRN, 3=INF, 4=DBG

config OCRE_WAMR_LOG_LEVEL
    int "OCRE WAMR log level"
    default 3
    range 0 4
    help
      Set the log level for WAMR runtime specifically.
      0=OFF, 1=ERR, 2=WRN, 3=INF, 4=DBG

config OCRE_CONTAINER_DEFAULT_STACK_SIZE
    int "Default container stack size"
    default 8192
    help
      Default stack size for OCRE containers.

config OCRE_CONTAINER_DEFAULT_HEAP_SIZE
    int "Default container heap size"
    default 65536
    help
      Default heap size for OCRE containers.
      This is the WASM linear memory size.

config AKIRA_WAMR_MINI_LOADER
    bool "Use WAMR mini loader"
    default n
    depends on AKIRA_APP_MANAGER
    help
      Use the WAMR mini loader to reduce code size.
      This reduces flash usage but may limit some WASM features.

config AKIRA_WAMR_MINIMAL
    bool "Minimal WAMR build"
    default n
    depends on AKIRA_APP_MANAGER
    help
      Build WAMR with minimal features to save memory.
      Disables: bulk_memory, ref_types, multi_module, tail_call, simd, logging.
      Use this for memory-constrained devices like nRF54L15 or STM32.

config AKIRA_OCRE_CS_THREAD_STACK_SIZE
    int "OCRE Container Supervisor thread stack size"
    default 16384 if SOC_SERIES_ESP32S3 || SOC_SERIES_ESP32
    default 4096
    depends on AKIRA_APP_MANAGER
    help
      Stack size for the OCRE Container Supervisor thread.
      ESP32-S3 and ESP32 require larger stacks (16384) due to their architecture
      and WAMR initialization overhead.
      Other platforms can use the default (4096).

# Akira Module System (Core AkiraOS functionality)
rsource "src/akira_modules/Kconfig"

endmenu